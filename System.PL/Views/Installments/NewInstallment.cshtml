@model Installment
@{
    ViewData["Title"] = "NewInstallment";
}






<h1> <span>Name : </span> @Model.Student?.Name</h1>
<h1> <span>Day : </span>  @Model.Student?.Schedule?.GroupName?.DayName</h1>
<h1> <span> Group Time : </span>@Model.Student?.Schedule?.Name</h1>
<h1> <span>Total Requried From You</span>  @Model.Student.TotalAmount</h1>



<form asp-action="NewInstallment">

   

    <div class="form-group">
        <label asp-for="PaymentDate" class="col-form-label"></label>
        <input asp-for="PaymentDate" class="form-control" value="@Model.PaymentDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
    </div>

<div class="form-group">
        <label asp-for="Amount" class="col-form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
 </div>




    <div class="form-group">
        <label asp-for="Method" class="control-label"></label>
        <select asp-for="Method" class="form-control">
            <option value="">Select Payment Method</option>
            @foreach (var method in Enum.GetValues(typeof(Installment.PaymentMethod)))
            {
                <option value="@method">@method</option>
            }
        </select>
        <span asp-validation-for="Method" class="text-danger"></span>
    </div>



    <input type="hidden" asp-for="@Model.StudentId" />



    <input type="submit" value="Create" class="btn btn-primary mt-4" />
</form>



@section validation {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

