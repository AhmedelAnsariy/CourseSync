@model IEnumerable<GroupName>
@{
    ViewData["Title"] = "Index";
}



<a asp-controller="Group" asp-action="Create" class="btn btn-primary mb-4">Create Day</a>


@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-striped table-hover text-center" style="padding-left: 150px;">


            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(d=>d.DayName)

                    </th>

                    <th>
                        @Html.DisplayNameFor(d=>d.Schedules)
                    </th>


                   

                 
                </tr>
            </thead>



            <tbody>

                @foreach (var dayaName in Model)
                {
                    <tr>
                        <td> @dayaName.DayName</td>




                        <td>
                            <ul>
                                @foreach (var schedule in dayaName.Schedules)
                                {
                                    <li>@schedule.Name</li>
                                }
                            </ul>
                        </td>


                       
                       


                    </tr>
                }




            </tbody>


        </table>

    </div>

}
else
{
    <div class="alert alert-danger">
        <h5> No Days Available</h5>
    </div>
}

