@model Student
@{
    ViewData["Title"] = "DetailsAttendance";
}

<div class="container">
    <h4> <span>Student Name : </span> @Model.Name</h4>
    <div class="row">
        <div class="col-md-6">
            <h3> Day  : </> @Model.Schedule.GroupName.DayName</h3>
            <h4><span>Time : </span> @Model.Schedule.Name</h4>
            <h4><span>Phone : </span> @Model.Phone</h4>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-12">
            <h4>Attendance Records</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Attendance Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Attendances)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@(item.IsComed ? "Come" : "NOT Come ")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
