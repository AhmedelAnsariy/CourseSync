
@model Student

@{
    ViewData["Title"] = "DetailsPlace";

}

<h1>Details About Student</h1>



<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" readonly class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Phone" class="col-form-label"></label>
    <input asp-for="Phone" readonly class="form-control" />
</div>


<div class="form-group">
    <label  class="col-form-label"> Day</label>
    <input asp-for="@Model.Schedule.GroupName.DayName" readonly class="form-control" />
</div>



<div class="form-group">
    <label  class="col-form-label"> Time</label>
    <input asp-for="@Model.Schedule.Name" readonly class="form-control" />
</div>








<a class="btn btn-outline-success" asp-action="EditStudentPlace" asp-route-id="@Model.Id"> Edit </a>






